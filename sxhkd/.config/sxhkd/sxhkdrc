#VolUp
{XF86AudioRaiseVolume, button14}
	amixer sset Master 1%+ unmute

#VolDn
{XF86AudioLowerVolume, button13}
	amixer sset Master 1%- unmute

#VolMt
{XF86AudioMute, button15}
	amixer sset Master toggle

$volume interactive
super + v
      set_volume >/dev/null

#MicMt
XF86AudioMicMute
	amixer sset Capture toggle

#Media Keys
{XF86AudioPlay,XF86AudioStop,XF86AudioNext,XF86AudioPrev}
	mpc {toggle,stop,next,prev}

#emoji
super + underscore
  emoji.sh

# Suspend
XF86Sleep
  $(LOCK_SUSPEND_CMD)

# Lock
{ctrl + alt + l, button12}
  $(SCREEN_LOCK_CMD)

# File browser
super + e
  $(FILE_BROWSER)

# editor
super + shift + e
  $(VISUAL)

# Web browser
super + shift + f
  $(BROWSER)

super + u; super + shift + f
  $(BROWSER_PRIVATE)

#telegram
super + c
	telegram-desktop

#reload panel
super + shift + Escape
	kill $(pidof bar_functions) ; bar_functions.rb

#full scrot
super + Print
  $(SCREENSHOT_FULLSCREEN)

#select scrot
super + shift + Print
  $(SCREENSHOT_SELECT)

#xkill
super + Delete
	xkill -frame

#Mouse buttons
button9
	xdotool key XF86Back
button11
	xdotool key XF86Forward
button10
	bspc desktop -f next
button8
	bspc desktop -f prev

super + shift + {comma, period}
      bspc monitor -f {"west", "east"}

super + {braceleft, braceright}
      bspc desktop -f {prev, next}

super + ctrl + {h,j,k,l}
      bspc monitor -f {"west", "south", "north", "east"}

super + alt + {h,l}
      bspc desktop -f {prev, next}

super + z ; m : {_, ctrl} + {h,j,k,l}
        bspc {node, monitor} -f {"west", "south", "north", "east"}

super + z; m : shift + {h,l}
        bspc desktop -f {prev, next}

# super + z; m : ctrl + {h,j,k,l}
#         bspc monitor -f {"west", "south", "north", "east"}

super + z; a; {1,2,3}
        bspc monitor -f {"^1", "^2", "^3"}

super + z; g; {1-3}; {1-9,0}
        bspc desktop -f '^{1-3}':'^{1-9,10}'


#
# wm independent hotkeys
#

# terminal emulator
super + Return
  $(TERMINAL)

# program launcher
super + r
	rofi -show run -disable-history -matching fuzzy

# window switcher
super + shift + r
       	rofi -show window -disable-history -matching fuzzy

# ssh selection
super + shift + s
      	rofi -show ssh -disable-history -matching fuzzy

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	kill $(pidof bar_functions) & bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
# super + y
# 	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {"west","south","north","east"}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

monitor left: focus or send to the given desktop
super + control + {_,shift + }{1-9,0}
        bspc {desktop -f,node -d} left:'^{1-9,10}'

super + alt + {_,shift + }{1-9,0}
        bspc {desktop -f,node -d} right:'^{1-9,10}'

super + control + alt + {_,shift + }{1-9,0}
        bspc {desktop -f,node -d} main:'^{1-9,10}'



